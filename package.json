{
  "name": "ngx-themes-plus",
  "version": "0.1.0",
  "description": "An abstraction for themes in your Angular app.",
  "keywords": [
    "themes",
    "dark mode"
  ],
  "author": "Fabian Zankl",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "start": "run-p lib:watch showcase:start-waiton",
    "lint": "run-p lib:lint showcase:lint",
    "test": "run-p lib:test",
    "prepare": "npm run clean && npm run lib:build",
    "lib:build": "ng build ngx-themes-plus",
    "lib:watch": "ng build ngx-themes-plus --watch --configuration development",
    "lib:lint": "ng lint ngx-themes-plus",
    "lib:test": "ng test ngx-themes-plus",
    "showcase:start-waiton": "wait-on dist/ngx-themes-plus/package.json && npm run showcase:start",
    "showcase:start": "ng serve showcase",
    "showcase:build": "ng build showcase",
    "showcase:watch": "ng build showcase --watch --configuration development",
    "showcase:lint": "ng lint showcase"
  },
  "homepage": "https://github.com/fzankl/ngx-themes-plus#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fzankl/ngx-themes-plus.git"
  },
  "bugs": {
    "url": "https://github.com/fzankl/ngx-themes-plus/issues"
  },
  "dependencies": {
    "@angular/animations": "^15.1.5",
    "@angular/common": "^15.1.5",
    "@angular/compiler": "^15.1.5",
    "@angular/core": "^15.1.5",
    "@angular/platform-browser": "^15.1.5",
    "@angular/platform-browser-dynamic": "^15.1.5",
    "@angular/router": "^15.1.5",
    "rxjs": "~7.8.0",
    "tslib": "^2.5.0",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.1.6",
    "@angular-eslint/builder": "15.2.1",
    "@angular-eslint/eslint-plugin": "15.2.1",
    "@angular-eslint/eslint-plugin-template": "15.2.1",
    "@angular-eslint/schematics": "15.2.1",
    "@angular-eslint/template-parser": "15.2.1",
    "@angular/cli": "~15.1.6",
    "@angular/compiler-cli": "^15.1.5",
    "@cypress/schematic": "^2.5.0",
    "@typescript-eslint/eslint-plugin": "5.53.0",
    "@typescript-eslint/parser": "5.53.0",
    "cypress": "^12.6.0",
    "eslint": "^8.34.0",
    "ng-packagr": "^15.1.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^4.1.2",
    "typescript": "~4.9.5",
    "wait-on": "^7.0.1"
  }
}
